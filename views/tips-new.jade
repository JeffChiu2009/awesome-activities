extends layout
block body
    .row
        .col-sm-4.col-sm-offset-4
            form(method="POST" action='/tips')
                legend New Tip
                .form-group
                    label(for='tip-body') Tip
                    textarea#post-summary.form-control(name='body', placeholder="What's your tip?")
                .form-group
                    label(for='tip-location') Location
                    input#post-subreddit.form-control(name='location', placeholder='Tip about where?')
                .text-right
                    button.btn.btn-primary(type='submit') Submit Tip
